<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.hs.emirim.young24.calculator.MainActivity">

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_num1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:inputType="numberDecimal" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_num2"
        android:layout_below="@+id/edit_num1"
        android:layout_alignLeft="@+id/edit_num1"
        android:layout_alignStart="@+id/edit_num1"
        android:inputType="numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_plus"
        android:id="@+id/but_plus"
        android:layout_above="@+id/but_minus"
        android:layout_toRightOf="@+id/edit_num2"
        android:layout_toEndOf="@+id/edit_num2"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_minus"
        android:id="@+id/but_minus"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/but_multiply"
        android:layout_alignStart="@+id/but_multiply" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_multiply"
        android:id="@+id/but_multiply"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/but_minus"
        android:layout_alignLeft="@+id/but_divide"
        android:layout_alignStart="@+id/but_divide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_divide"
        android:id="@+id/but_divide"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/but_multiply"
        android:layout_alignLeft="@+id/but_plus"
        android:layout_alignStart="@+id/but_plus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_result"
        android:id="@+id/text_result"
        android:layout_below="@+id/but_divide"
        android:layout_centerHorizontal="true"
        android:textColor="#fa0707"
        android:textSize="30sp" />

</RelativeLayout>
